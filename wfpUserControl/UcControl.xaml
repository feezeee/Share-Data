<UserControl x:Class="wfpUserControl.UcControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:wfpUserControl"             
             mc:Ignorable="d" d:DesignWidth="220" Height="200">
    <StackPanel Name="StackPnl" Margin="10,10,10,10" MouseEnter="StackPanel_MouseEnter">
        <Image Name="PcPicture" Margin="0,-20,0,0" VerticalAlignment="Top" RenderTransformOrigin="0,1" Height="auto"/>
        <Label Name="NameLabel"  Target="{Binding ElementName=txtName}" Margin="0,-30,0,0" HorizontalContentAlignment="Center" Width="Auto" Height="auto"/>
    </StackPanel>
</UserControl>
